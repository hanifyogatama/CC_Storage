<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHorizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdVertical1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdVertical2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".90"/>

    <ImageView
        android:id="@+id/ivPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_landing_page2"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintTop_toBottomOf="@id/gdHorizontal" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic"
        android:text="is name"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/vsComp"
        app:layout_constraintEnd_toStartOf="@id/vsComp"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@id/gdVertical1" />

    <TextView
        android:id="@+id/vsComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comic"
        android:gravity="center"
        android:text="vs komputer"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Lawanmu"
        android:fontFamily="@font/comic"
        android:textColor="#000"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/gdHorizontal"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        />

    <ImageView
        android:id="@+id/ivPlayerLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_landing_page1"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintTop_toBottomOf="@id/vsComp" />

    <TextView
        android:id="@+id/tvNamaPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/comic"
        android:text="is name"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/vsplayer"
        app:layout_constraintEnd_toStartOf="@id/vsplayer"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@id/gdVertical1" />

    <TextView
        android:id="@+id/vsplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comic"
        android:gravity="center"
        android:text="vs Pemain"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerLogo"
      />

</androidx.constraintlayout.widget.ConstraintLayout>