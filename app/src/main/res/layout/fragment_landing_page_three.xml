<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LandingPage_three">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHorizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdVertical1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdVertical2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".90"/>

    <ImageView
        android:id="@+id/ivLogoUser"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_landing_page3"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintTop_toBottomOf="@id/gdHorizontal" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuliskan namamu di bawah ini "
        android:fontFamily="@font/comic"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/ivLogoUser"
        app:layout_constraintStart_toStartOf="@id/gdVertical1"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        />

    <ImageView
        android:id="@+id/ivKirim"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kirim"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintEnd_toEndOf="@id/gdVertical2"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>